<%- include ('partials/_header2'); -%>

    <div class="main">
        <div class="container mar__top-20">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header text-center">
                            <h5 class="card-title">
                                <i class="fas fa-utensils"></i>
                                Edit Food Plate
                            </h5>
                        </div>
                        <div class="card-body">
                            <form action="/editFoodPlates/<%= menu._id %>" method="post">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="foodPlate" placeholder="Food Plate"
                                        value="<%= menu.foodPlate %>">
                                </div>
                                <div class="form-group">
                                    <textarea class="form-control" name="description" cols="80"
                                        placeholder="Food Description"><%= menu.description %></textarea>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" type="number" name="price" placeholder="Price"
                                        value="<%= menu.price %>">
                                </div>
                                <div class="card-footer text-center">
                                    <button class="btn btn-primary" type="submit">
                                        SAVE
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include ('partials/_footer'); -%>